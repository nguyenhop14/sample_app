<% provide :title, t("user.new.signup") %>
<h1><%= t "user.new.signup" %></h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @user, url: signup_path do |f| %>
      <%= render "shared/error_messages" %>

      <%= f.label t("user.new.name") %>
      <%= f.text_field :name, class: "form-control" %>

      <%= f.label t("user.new.email") %>
      <%= f.email_field :email, class: "form-control" %>

      <%= f.label t("user.new.password") %>
      <%= f.password_field :password, class: "form-control" %>

      <%= f.label :password_confirmation, t("user.new.confirm") %>
      <%= f.password_field :password_confirmation, class: "form-control" %>

      <%= f.submit t("user.new.create"), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
